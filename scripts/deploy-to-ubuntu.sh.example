#!/bin/bash

###############################################################################
# Deploy Halext.org to Ubuntu Server
# This script deploys backend and frontend code to the remote server
###############################################################################

set -e

# ANSI color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# Configuration
SERVER_USER="your-username"
SERVER_HOST="your-server-ip"
SERVER_PATH="/home/your-username/halext-org"

echo -e "${CYAN}╔═══════════════════════════════════════════════════════════╗${NC}"
echo -e "${CYAN}║           DEPLOY HALEXT.ORG TO UBUNTU SERVER              ║${NC}"
echo -e "${CYAN}╚═══════════════════════════════════════════════════════════╝${NC}"
echo ""

# Function to run SSH command
run_ssh() {
    local cmd="$1"
    local desc="$2"

    echo -e "\n${BLUE}▶ ${desc}${NC}"
    ssh -o ConnectTimeout=10 "${SERVER_USER}@${SERVER_HOST}" "$cmd"

    if [ $? -eq 0 ]; then
        echo -e "${GREEN}✅ Success${NC}"
    else
        echo -e "${RED}❌ Failed${NC}"
        return 1
    fi
}

# Step 1: Check server status
echo -e "\n${CYAN}═══════════════════════════════════════════════════════════${NC}"
echo -e "${CYAN}Step 1: Server Health Check${NC}"
echo -e "${CYAN}═══════════════════════════════════════════════════════════${NC}"

run_ssh "uptime && free -h | head -2 && df -h / | tail -1" "Check server resources"

# Step 2: Stop/Disable Ollama (critical!)
echo -e "\n${CYAN}═══════════════════════════════════════════════════════════${NC}"
echo -e "${CYAN}Step 2: Disable Ollama on Ubuntu (prevent memory issues)${NC}"
echo -e "${CYAN}═══════════════════════════════════════════════════════════${NC}"

run_ssh "sudo systemctl stop ollama 2>/dev/null || true" "Stop Ollama service"
run_ssh "sudo systemctl disable ollama 2>/dev/null || true" "Disable Ollama autostart"
echo -e "${GREEN}✅ Ollama disabled - Mac will handle AI workload${NC}"

# Step 3: Pull latest code from Git
echo -e "\n${CYAN}═══════════════════════════════════════════════════════════${NC}"
echo -e "${CYAN}Step 3: Pull Latest Code${NC}"
echo -e "${CYAN}═══════════════════════════════════════════════════════════${NC}"

run_ssh "cd ${SERVER_PATH} && git fetch && git pull origin main" "Pull latest code from GitHub"

# Step 4: Install backend dependencies
echo -e "\n${CYAN}═══════════════════════════════════════════════════════════${NC}"
echo -e "${CYAN}Step 4: Update Backend Dependencies${NC}"
echo -e "${CYAN}═══════════════════════════════════════════════════════════${NC}"

run_ssh "cd ${SERVER_PATH}/backend && source env/bin/activate && pip install httpx" "Install httpx for AI client manager"

# Step 5: Run database migration
echo -e "\n${CYAN}═══════════════════════════════════════════════════════════${NC}"
echo -e "${CYAN}Step 5: Run Database Migration${NC}"
echo -e "${CYAN}═══════════════════════════════════════════════════════════${NC}"

run_ssh "cd ${SERVER_PATH}/backend && source env/bin/activate && python migrations/add_api_keys.py" "Create AI client management tables"

# Step 6: Restart backend service
echo -e "\n${CYAN}═══════════════════════════════════════════════════════════${NC}"
echo -e "${CYAN}Step 6: Restart Backend Service${NC}"
echo -e "${CYAN}═══════════════════════════════════════════════════════════${NC}"

run_ssh "sudo systemctl restart halext-backend" "Restart backend service"
sleep 3
run_ssh "sudo systemctl status halext-backend --no-pager -l | head -20" "Check backend status"

# Step 7: Build frontend
echo -e "\n${CYAN}═══════════════════════════════════════════════════════════${NC}"
echo -e "${CYAN}Step 7: Build Frontend${NC}"
echo -e "${CYAN}═══════════════════════════════════════════════════════════${NC}"

run_ssh "cd ${SERVER_PATH}/frontend && npm install && npm run build" "Build frontend (this may take 2-3 minutes)"

# Step 8: Restart nginx
echo -e "\n${CYAN}═══════════════════════════════════════════════════════════${NC}"
echo -e "${CYAN}Step 8: Restart Nginx${NC}"
echo -e "${CYAN}═══════════════════════════════════════════════════════════${NC}"

run_ssh "sudo systemctl restart nginx" "Restart Nginx"
run_ssh "sudo systemctl status nginx --no-pager | head -10" "Check Nginx status"

# Step 9: Verify deployment
echo -e "\n${CYAN}═══════════════════════════════════════════════════════════${NC}"
echo -e "${CYAN}Step 9: Verify Deployment${NC}"
echo -e "${CYAN}═══════════════════════════════════════════════════════════${NC}"

run_ssh "curl -s http://localhost:8000/health || echo 'Backend health check failed'" "Test backend health endpoint"
run_ssh "ls -lh ${SERVER_PATH}/frontend/dist/index.html" "Verify frontend build"

echo -e "\n${GREEN}╔═══════════════════════════════════════════════════════════╗${NC}"
echo -e "${GREEN}║              DEPLOYMENT COMPLETE!                         ║${NC}"
echo -e "${GREEN}╚═══════════════════════════════════════════════════════════╝${NC}"

echo -e "\n${YELLOW}Next Steps:${NC}"
echo -e "  1. Visit ${CYAN}https://org.halext.org${NC} to test the admin panel"
echo -e "  2. Configure port forwarding on your Verizon router:"
echo -e "     ${CYAN}Port 11434 → 192.168.1.204:11434${NC} (Mac Ollama)"
echo -e "  3. Run connectivity test:"
echo -e "     ${CYAN}ssh ${SERVER_USER}@${SERVER_HOST} './halext-org/scripts/ubuntu-test-mac-ollama.sh YOUR_PUBLIC_IP'${NC}"
echo -e "  4. Login to admin panel and add your Mac as an AI client"
echo -e "\n${GREEN}Server is now configured to proxy AI requests to your Mac!${NC}\n"
